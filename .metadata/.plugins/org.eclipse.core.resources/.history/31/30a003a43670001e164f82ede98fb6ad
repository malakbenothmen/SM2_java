package TD4;

public class Librairie {
	private Livre liste[];
	private int capacite;
	private int nb;
	private static int count;
	
	
	Librairie(int max)
	{  this.capacite=max;
		this.liste=new Livre[this.capacite];}
	
	int getNb()
	{return this.nb;}
	
	void inventaire()
	{   System.out.println("***la liste de tous les livres***\n");
		for(int i=0;i<this.nb;i++)
		{
		System.out.println(liste[i]+" Prix: "+liste[i].calculePrix());}
	}
	void inventaire(String categ)
	{	System.out.println("***la liste des "+categ+"***\n");
		for(int i=0;i<this.nb;i++)
			{if(liste[i].getClass().getSimpleName().equals(categ))
			{System.out.println(liste[i]+" Prix: "+liste[i].calculePrix());}
			}
	
	}
	
	void ajoutLiv(Livre liv)
	{if(nb<=this.capacite)
	{ count++;
	    liste[nb]=liv;
	    nb=count;}
	else
		System.out.println("impossible d'ajouter un livre ,librairie atteint la capacite maximale");
	}
	
	void suppLiv(int num)
	{
	for(int i=0;i<this.nb;i++)
		{if(liste[i].id==num)
		{suppLiv(num,i);}
		}
	}
	void suppLiv(int num, int i)
	{for(int j=i;j<this.nb-1;j++)
		{liste[j]=liste[j+1];}
	nb--;
	}
	



}
